<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >




    <ImageView
        android:src="@drawable/emer"
        android:layout_width="match_parent"
        android:id="@+id/emergencyimv"
        android:layout_height="140dp"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#ff8300"
        android:layout_below="@+id/emergencyimv"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:text="National Emergency Number"/>
        <LinearLayout

            android:background="#ff8300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
             android:textColor="#ffff"
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="112"/>

            <ImageButton

                android:background="@null"
                android:id="@+id/img1"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"


                android:src="@drawable/ic_call_ambulance" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#ffff"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:textSize="20dp"
            android:text="POLICE"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="100"/>

            <ImageButton
                android:background="@null"
                android:id="@+id/img2"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"


                android:src="@drawable/ic_call_ambulance" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3"
        android:background="#247209"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name3"
            android:textSize="20dp"
            android:text="AMBULANCE"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#ffff"
                android:id="@+id/number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="102"/>

            <ImageButton
                android:background="@null"
                android:id="@+id/img3"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"


                android:src="@drawable/ic_call_ambulance" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll3"
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name4"
            android:textSize="20dp"
            android:text="FIRE"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="101"/>

            <ImageButton
                android:background="@null"
                android:id="@+id/img4"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"


                android:src="@drawable/ic_call_ambulance" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#ff8300"
        android:layout_below="@+id/ll4"
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name5"
            android:textSize="20dp"
            android:text="Women Helpline"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#fff"
                android:id="@+id/number5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="1091"/>

            <ImageButton
                android:background="@null"
                android:id="@+id/img5"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="240dp"


                android:src="@drawable/ic_call_ambulance" />
        </LinearLayout>
    </LinearLayout>




    </RelativeLayout>
